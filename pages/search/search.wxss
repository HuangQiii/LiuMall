page {
  width: 100%;
  min-height: 100%;
  background-color: #f4f4f4;
}

.search {
  position: fixed;
  top: 0;
  width: 750rpx;
  height: 105rpx;
  display: flex;
  background: #fff;
  border-bottom: 0.8px solid #ebebeb;
  padding: 15rpx 32rpx;
  font-size: 29rpx;
  color: #555;
}

.input {
  position: relative;
  margin-top: 16rpx;
  float: left;
  width: 560rpx;
  height: 75rpx;
  line-height: 59rpx;
  padding: 0 20rpx;
  background: #f4f4f4;
  border-radius: 35rpx; 
}

.search-icon {
  position: absolute;
  top: 20rpx;
  left: 25rpx;
  width: 31rpx;
  height: 31rpx;
}

.search-del {
  position: absolute;
  top: 6rpx;
  right: 25rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 10;
  padding: 10rpx;
}

.keywrod {
  position: absolute;
  top: 0;
  left: 40rpx;
  width: 506rpx;
  height: 75rpx;
  padding-left: 30rpx;
}

.search-tip {
  margin-left: 30rpx;
  width: 66rpx;
  height: 107rpx;
  line-height: 107rpx;
  color: #555;
  font-size: 32rpx;
}

.history {
  height: auto;
  overflow: hidden;
  margin-top: 135rpx;
}

.panal {
  background: #fff;
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.panal-header {
  padding: 0 35rpx;
  height: 85rpx;
  width: 100%;
  color: #999;
  font-size: 27rpx;
  display: flex;
  align-items: center;
  align-content: space-around;
}

.panal-title {
  display: block;
  width: 120rpx;
  margin-left: 10rpx;
}

.panal-icon {
  display: block;
  margin-left: 511rpx;
  height: 38rpx;
  width: 38rpx;
}

.panal-body {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  padding-left: 40rpx;
}

.panal .item {
  display: inline-block;
  width: auto;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 15rpx;
  border: 1rpx solid #999;
  margin: 0 31.25rpx 31.25rpx 0;
  font-size: 24rpx;
  color: #555;
}

.panal .item.active {
  color: #fab614;
  border: 1rpx solid #fab614;
}

.help {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.helper-item {
  height: 100rpx;
  width: 688rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #777;
  border-bottom: 1rpx solid #f4f4f4;
  margin-left: 32rpx;
}

.sort {
  position: fixed;
  top: 133rpx;
  background: #fff;
  width: 100%;
  height: 78rpx;
}

.sort-box {
  background: #fff;
  width: 100%;
  height: 78rpx;
  overflow: hidden;
  padding: 0 30rpx;
  display: flex;
  border-bottom: 1rpx solid #d9d9d9;
}

.sort-box .item {
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  flex: 1;
  color: #555;
  font-size: 30rpx;
}

.sort-box .item .txt {
  display: block;
  width: 100%;
  height: 100%;
  color: #555;
}

.sort-box .item.active .txt {
  color: #fab614;
}

.sort-box .item.by-price {
  background: url(//yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/no-3127092a69.png) 225rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box .item.by-price.active.asc {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/up-636b92c0a5.png) 225rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box .item.by-price.active.desc {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/down-95e035f3e5.png) 225rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.good-search {
  margin-top: 210rpx;
  height: auto;
  overflow: hidden;
  width: 750rpx;
  padding: 0 6.25rpx;
}

.good-item {
  float: left;
  background: #fff;
  width: 375rpx;
  padding-bottom: 32rpx;
  height: auto;
  overflow: hidden;
  text-align: center;
}

.good-img {
  width: 302rpx;
  height: 302rpx;
}

.good-name {
  display: block;
  width: 365.625rpx;
  height: 35rpx;
  margin: 10rpx 0 15rpx 0;
  text-align: center;
  overflow: hidden;
  font-size: 27rpx;
  color: #555;
}

.good-price {
  display: block;
  width: 365.625rpx;
  height: 30rpx;
  text-align: center;
  font-size: 27rpx;
  color: #fab614;
}

.empty-search {
  width: 100%;
  height: 100%;
  padding-top: 300rpx;
}

.empty-search-icon {
  margin: 0 auto;
  display: block;
  width: 240rpx;
  height: 240rpx;
}

.empty-search-text {
  display: block;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}
