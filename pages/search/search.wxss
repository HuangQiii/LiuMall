/* pages/search/search.wxss */

page {
  min-height: 100%;
  background-color: #f4f4f4;
}

.container {
  min-height: 100%;
  background-color: #f4f4f4;
}

.search-header {
  position: fixed;
  top: 0;
  width: 750rpx;
  height: 105rpx;
  display: flex;
  background: #fff;
  border-bottom: 0.8px solid #ebebeb;
  padding: 15rpx 32rpx;
  font-size: 29rpx;
  color: #555;
}

.search-header .input-box {
  position: relative;
  margin-top: 16rpx;
  float: left;
  width: 560rpx;
  height: 75rpx;
  line-height: 59rpx;
  padding: 0 20rpx;
  background: #f4f4f4;
  border-radius: 35rpx;
}

.search-header .icon {
  position: absolute;
  top: 20rpx;
  left: 25rpx;
  width: 31rpx;
  height: 31rpx;
}

.search-header .del {
  position: absolute;
  top: 6rpx;
  right: 25rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 10;
  padding: 10rpx;
}

.search-header .keywrod {
  position: absolute;
  top: 0;
  left: 40rpx;
  width: 506rpx;
  height: 75rpx;
  padding-left: 30rpx;
}

.search-header .right {
  margin-left: 30rpx;
  width: 66rpx;
  height: 107rpx;
  line-height: 107rpx;
  color: #555;
  font-size: 32rpx;
}

.no-search {
  height: auto;
  overflow: hidden;
  margin-top: 135rpx;
}

.serach-keywords {
  background: #fff;
  width: 750rpx;
  height: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.serach-keywords .h {
  padding: 0 35rpx;
  height: 85rpx;
  width: 100%;
  color: #999;
  font-size: 27rpx;
  display: flex;
  align-items: center;
  align-content: space-around;
}

.serach-keywords .title {
  display: block;
  width: 120rpx;
  margin-left: 10rpx;
}

.serach-keywords .icon {
  display: block;
  margin-left: 511rpx;
  height: 38rpx;
  width: 38rpx;
}

.serach-keywords .b {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  padding-left: 40rpx;
}

.serach-keywords .item {
  display: inline-block;
  width: auto;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 15rpx;
  border: 1rpx solid #999;
  margin: 0 31.25rpx 31.25rpx 0;
  font-size: 24rpx;
  color: #555;
}

.serach-keywords .item.active {
  color: #b4282d;
  border: 1rpx solid #b4282d;
}

.shelper-list {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.shelper-list .item {
  height: 100rpx;
  width: 688rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #777;
  border-bottom: 1rpx solid #f4f4f4;
  margin-left: 32rpx;
}

.sort {
  position: fixed;
  top: 133rpx;
  background: #fff;
  width: 100%;
  height: 78rpx;
}

.sort-box {
  background: #fff;
  width: 100%;
  height: 78rpx;
  overflow: hidden;
  padding: 0 30rpx;
  display: flex;
  border-bottom: 1rpx solid #d9d9d9;
}

.sort-box .item {
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  flex: 1;
  color: #555;
  font-size: 30rpx;
}

.sort-box .item .txt {
  display: block;
  width: 100%;
  height: 100%;
  color: #555;
}

.sort-box .item.active .txt {
  color: #b4282d;
}

.sort-box .item.by-price {
  background: url(//yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/no-3127092a69.png) 225rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box .item.by-price.active.asc {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/up-636b92c0a5.png) 225rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box .item.by-price.active.desc {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/down-95e035f3e5.png) 225rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.cate-item {
  margin-top: 210rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .h {
  height: 145rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cate-item .h .name {
  display: block;
  height: 35rpx;
  margin-bottom: 18rpx;
  font-size: 28rpx;
  color: #555;
}

.cate-item .h .desc {
  display: block;
  height: 24rpx;
  font-size: 24rpx;
  color: #999;
}

.cate-item .b {
  width: 750rpx;
  padding: 0 6.25rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .list-filter {
  height: 80rpx;
  width: 100%;
  background: #fff;
  margin-bottom: 6.25rpx;
}

.cate-item .b .item {
  float: left;
  background: #fff;
  width: 375rpx;
  padding-bottom: 32rpx;
  height: auto;
  overflow: hidden;
  text-align: center;
}

.cate-item .item .img {
  width: 302rpx;
  height: 302rpx;
}

.cate-item .item .name {
  display: block;
  width: 365.625rpx;
  height: 35rpx;
  margin: 10rpx 0 15rpx 0;
  text-align: center;
  overflow: hidden;
  font-size: 27rpx;
  color: #555;
}

.cate-item .item .price {
  display: block;
  width: 365.625rpx;
  height: 30rpx;
  text-align: center;
  font-size: 27rpx;
  color: #b4282d;
}

.search-result-empty {
  width: 100%;
  height: 100%;
  padding-top: 300rpx;
}

.search-result-empty .icon {
  margin: 0 auto;
  display: block;
  width: 240rpx;
  height: 240rpx;
}

.search-result-empty .text {
  display: block;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}
