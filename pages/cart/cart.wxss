page {
  height: 100%;
  min-height: 100%;
  background: #f4f4f4;
}

.view {
}

.lists {
  height: auto;
  width: 100%;
  overflow: hidden;
  margin-bottom: 120rpx;
}



.item-selectd {
  width: 100rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.checkbox {
  height: 34rpx;
  width: 34rpx;
  border: 1px solid #666;
  border-radius: 50%;
  flex-shrink: 0;
  text-align: center;
  line-height: 34rpx;
}

.checked {
  border-color: transparent;
  background: #fab614;
  color: #fff;
  font-size: 28rpx;
}

.item-good {
  height: 164rpx;
  /* flex: 1;  */
   width: 300rpx;
  display: flex;
  background: blue;
}

.img {
  height: 140rpx;
  width: 140rpx;
  margin: 19.5rpx 18rpx 19.5rpx 0;
}

.item-msg {
  height: 125rpx;
  padding-top: 18rpx;
  flex: 1;
}

.message {
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 30rpx;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.name {
  font-size: 24rpx;
  font-weight: bold;
  color: #555;
}

.description {
  font-size: 20rpx;
  color: #7f7f7f;
}

.price {
  font-size: 22rpx;
  font-weight: bold;
  color: #fab614;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  background: #fff;
  display: flex;
  color: #fff;
  align-items: center;
  box-sizing: border-box;
  padding-left: 40rpx;
}

.bar-msg {
  font-size: 28rpx;
  margin-left: 28rpx;
  color: #666;
}

.total {
  flex: 1;
  margin-left: 28rpx;
  font-size: 28rpx;
  color: #fab614;
}

.btn-normal {
  height: 34rpx;
  width: auto;
  padding: 33rpx;
  margin-right: 10rpx;
  font-size: 29rpx;
  color: #666;
}

.btn-light {
  height: 100rpx;
  width: 210rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 29rpx;
  background: #fab614;
  color: #fff;
}

.active {
  background: #daa520;
}

.item {
  height: 195rpx;
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
  background: #fff;
  position: relative;
}

.inner{
    position: absolute;
    top:0;
    display: flex;
    flex-direction: row;
    align-items: center;
    box-sizing: border-box;
    padding: 10rpx 40rpx 10rpx 0;   
}
.inner.txt{
    background-color: #fff;
    width: 100%;
    height: 195rpx;
    z-index: 5;
    padding:0 10rpx;
    transition: left 0.2s ease-in-out;
    /* white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis; */
}
.inner.del{
    background-color: #e64340;
    width: 180rpx;
    height: 195rpx;
    line-height: 195rpx;
    text-align: center;
    z-index: 4;
    right: 0;
    color: #fff
}