      <view wx:for="{{cartGoods}}"  wx:key="{{cartGoods.id}}"  class="item">
        <View
          bindtouchstart="touchS"
          bindtouchmove="touchM"
          bindtouchend="touchE"
          data-index="{{item.id}}"
          style="{{item.txtStyle}}"
          class="inner txt"
        >
            <View
              class="item-selectd"
              bindtap="checkedItem"
              data-index="{{index}}"
              data-id="{{item.id}}"
            >
              <view class="checkbox {{item.checked ? 'checked' : ''}}">
                {{item.checked? '✓': ''}}
              </view>
            </View> 
