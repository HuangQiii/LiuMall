        </View>
      </view>

  </View>
  <view class="bottom-bar">
    <view
      class="checkbox {{checkedAllStatus ? 'checked' : ''}}"
      bindtap="checkedAll"
    >
      {{checkedAllStatus? '√': ''}}
    </view>
    <view class="bar-msg">
      {{checkedAllStatus ? '已选(' : '全选'}}{{checkedGoodsCount}}{{checkedAllStatus ? ')' : ''}}
    </view>
    <view class="total">
      {{!isEdit ? '￥'+checkedGoodsAmount : ''}}
    </view>
    <view
      class="btn-normal"
      bindtap="edit"
    >
      {{!isEdit ? '编辑' : '完成'}}
    </view>
    <view
      class="btn-light"
      hover-class="active"
      bindtap="deleteCart"
      wx:if="{{isEdit}}"
    >
      删除所选
    </view>
    <view
      class="btn-light"
      hover-class="active"
      bindtap="checkOut"
      wx:if="{{!isEdit}}"
    >
      下单
