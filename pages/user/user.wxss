page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.wrap {
  box-sizing: border-box;
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
  padding: 0 50rpx;
  background: #fab614;
}

.avatar {
  height: 148rpx;
  width: 148rpx;
  border-radius: 5px;
}

.info {
  flex: 1;
  height: 85rpx;
  padding-left: 31.25rpx;
}

.msg {
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.name {
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  color: #fff;
  font-size: 37.5rpx;
  margin-bottom: 10rpx;
}

.publish {
  font-size: 42rpx;
  color: #fff;
}

.cell-panel {
  display: block;
  margin-top: 15px;
  width: 100%;
}
