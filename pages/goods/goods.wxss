 .container {
  margin-bottom: 100rpx;
  width: 750rpx;
  background: #f4f4f4;
}

.gallery {
  width: 750rpx;
  height: 750rpx;
}

.active {
  background: #ebebeb;
}

.info {
  background-color: white;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 5vw 4vw 4vw 32rpx;
  margin-bottom: 20rpx;
}

.left-info {
  width: 70vw;
  word-wrap: break-word;
}

.title {
  margin-bottom: 5rpx;
  font-size: 33rpx;
  line-height: 45rpx;
  color: #555;
}

.price {
  color: #b4282d;
  font-size: 45rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.tag {
  padding: 0rpx 10rpx;
  border: 1rpx solid #f48f18;
  margin-right: 2vw;
  font-size: 25rpx;
  color: #f48f18;
  border-radius: 4rpx;
  background-size: 10.75rpx 18.75rpx;
  line-height: 40rpx;
  height: 40rpx;
}

.tag.active {
  background: #ebebeb;
}

.desc {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  line-height: 38rpx;
  color: #999;
}

.right-info {
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 15vw;
  margin-top: 12rpx;
}

.attention {
  font-size: 48rpx;
}

.good-detail {
  line-height: 36rpx;
  height: 36rpx;
  border: 1rpx solid #555;
  font-size: 22rpx;
  color: #555;
  border-radius: 2rpx;
  margin: 13rpx 0 0 7rpx;
  text-align: center;
  width: 11.5vw;
}
 
.brand {
  display: flex;
  height: 60rpx;
}

.description {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.item {
  width: 650rpx;
  padding: 15rpx 20rpx;
  margin: 0 auto;
  font-size: 38.5rpx;
  border-top: 0.8px solid #ebebeb;
}

.des-prop {
  float: left;
  font-size: 25rpx;
  width: 134rpx;
  height: 45rpx;
  line-height: 45rpx;
  overflow: hidden;
  color: #999;
}

.des-value {
  width: 500rpx;
  font-size: 25rpx;
  margin-left: 10rpx;
  display: block;
  line-height: 45rpx;
  overflow: hidden;
  color: #555;
}

.bar {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 20;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  background: #fff;
  border-top: 1rpx solid #ebebeb;
}

.bar .home {
  float: left;
  height: 100rpx;
  width: 140rpx;
  border-top: 1px solid #f4f4f4;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bar .home.active {
  background: #ebebeb;
}

.home-icon {
  display: block;
  height: 58rpx;
  width: 58rpx;
}

.cart {
  border: 1px solid #b4282d;
  background: #b4282d;
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  flex: 1;
  text-align: center;
  color: #fff;
}

.cart.active {
  background: #981d22;
} 
